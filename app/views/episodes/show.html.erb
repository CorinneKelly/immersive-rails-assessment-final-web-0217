<h1>Episode</h1>

<h3><%= "Date: #{@episode.date}" %></h3>

<h3>Guests</h3>

<ul>
  <% @episode.guests.each do |guest| %>
    <li><%= link_to guest.name, guest %>
    <% appearance = Appearance.find_by(episode_id: @episode.id, guest_id: guest.id) %>
    <%= link_to "Edit this Appearance", edit_appearance_url %></li>
  <% end %>
</ul>
